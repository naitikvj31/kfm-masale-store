generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           Int            @id @default(autoincrement())
  name         String
  slug         String         @unique
  description  String?
  imageUrl     String?
  isActive     Boolean        @default(true)
  isHotSeller  Boolean        @default(false)
  isNewArrival Boolean        @default(false)
  sortOrder    Int            @default(0)
  variants     Variant[]
  images       ProductImage[]
  reviews      Review[]       // New: Products can have reviews
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model ProductImage {
  id        Int     @id @default(autoincrement())
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  url       String
  sortOrder Int     @default(0)
}
model Variant {
  id            Int         @id @default(autoincrement())
  productId     Int
  product       Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  size          String      // e.g., "50g", "100g", "1kg"
  price         Float
  discountPrice Float?      // New field: the discounted selling price (if null, no discount)
  stockQuantity Int         @default(0)
  orderItems    OrderItem[]
}

model Order {
  id              Int         @id @default(autoincrement())
  userId          Int?        // Optional, links to the registered User
  user            User?       @relation(fields: [userId], references: [id])
  customerName    String
  customerEmail   String?
  customerPhone   String
  customerAddress String
  totalAmount     Float
  status          String      @default("Pending") // Pending, Processing, Shipped, Delivered, Cancelled
  orderItems      OrderItem[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  variantId Int
  variant   Variant @relation(fields: [variantId], references: [id])
  quantity  Int     @default(1)
  price     Float   // Price per unit at time of purchase
}

model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  password      String    // Hashed with bcrypt
  role          String    @default("CUSTOMER") // ADMIN, CUSTOMER
  isVerified    Boolean   @default(false)
  orders        Order[]   // Links to their purchase history
  reviews       Review[]  // Links to reviews they posted
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  id        Int      @id @default(autoincrement())
  email     String
  token     String   @unique
  type      String   // "VERIFY_EMAIL", "RESET_PASSWORD"
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
}

model Review {
  id        Int      @id @default(autoincrement())
  productId Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  rating    Int      // 1 to 5 stars
  title     String?  // Optional review title
  comment   String   @db.Text
  isApproved Boolean @default(true) // Admin moderation capability
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
